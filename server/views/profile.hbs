{{> header}}
{{> page-headline}}

<div class="row">
    <div id="main" class="main profile-page">
        <div class="main__side-bar">
            <div class="user-widget--small">
                <div class="user-widget flex-disp">
                    <div class="user-widget__img">
                        <img src="{{imgUrl}}" alt="User Image" width="72">
                    </div>
                    <div class="user-widget__name">
                        <a href="#">{{user}}</a>
                    </div>
                </div>
            </div>

            <ul class="primary-list side-menu">
                <li class="selected side-menu__link"><a href="#" id="profile">Edit profile</a> </li>
                <li class="side-menu__link"><a href="#" id="history">History</a></li>
            </ul>
            <div class="stats">

                <table class="table-stats">
                    <thead>
                        <tr>
                            <th colspan="2">User Info</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Username</td>
                            <td>{{user}}</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>{{email}}</td>
                        </tr>
                    </tbody>
                </table>



                <table class="table-stats">
                    <thead>
                        <tr>
                            <th colspan="2">Stats</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Attempts</td>
                            <td>{{basicAttempts}}</td>
                        </tr>
                        <tr>
                            <td>Correct Answers</td>
                            <td>{{basicSuccesses}}</td>
                        </tr>
                        <tr>
                            <td>Success rate</td>
                            <td>{{basicPercentage}}%</td>
                        </tr>
                        <tr>
                            <td>XP</td>
                            <td>{{xp}}</td>
                        </tr>
                        <tr>
                            <td>Most Answers in a row</td>
                            <td>{{bestCombo}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>


        </div>
        <div class="main__main-content">
            <div id="profilePage" class="scroll-container">
                <div class="custom-scroll profile tab active">
                    <form action="patch" id="update-form" class="form-edit form">
                        <fieldset>
                            <legend>Update Account info</legend>
                            <div class="form-edit__group">
                                <label for="username">Username: </label>
                                <input type="text" name="username" id="username" placeholder="New username">
                            </div>
                            <div class="form-edit__group">
                                <label for="email">Email: </label>
                                <input type="email" name="email" id="email" placeholder="New email">
                            </div>
                            <div class="form-edit__group">
                                <button type="submit"
                                    class="btn btn__main btn__main--black form-edit__btn">Submit</button>
                            </div>
                        </fieldset>


                    </form>

                    <form action='/api/images' method="post" enctype="multipart/form-data" class="form-edit">
                        <fieldset>
                            <legend>Change Your Picture</legend>
                            <div class="form-edit__group form-edit__group--pic">
                                <input type='file' name='image' />
                                <input type="submit" value="Submit"
                                    class="btn btn__main btn__main--black form-edit__btn">
                            </div>
                        </fieldset>


                    </form>

                    <form action="patch" id="update-password" class="form-edit form">
                        <fieldset>

                            <legend>
                                Update Your Password
                            </legend>
                            <div class="form-edit__group"><label for="old-password">Old password: </label>
                                <input type="password" name="old-password" id="old-password" placeholder="Old password"
                                    required></div>
                            <div class="form-edit__group">
                                <label for="new-password">New password: </label>
                                <input type="password" name="new-password" id="new-password" placeholder="New password"
                                    required>
                            </div>
                            <div class="form-edit__group">
                                <button type="submit"
                                    class="btn btn__main btn__main--black form-edit__btn">Submit</button>
                            </div>
                        </fieldset>


                    </form>
                    <button id="delete-account" class="btn btn__main btn__main--black center show">Delete
                        Account</button>
                </div>
                <div class="history custom-scroll tab">
                    <div class="history__list"></div>
                </div>
                <div class="lds-roller loader hidden">
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
                <p id="update-response"></p>


            </div>
        </div>
    </div>
</div>


<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/js/profile.js"></script>
<script src="/js/main.js"></script>
<script src="/js/utils/accordion.js"></script>
</body>

</html>